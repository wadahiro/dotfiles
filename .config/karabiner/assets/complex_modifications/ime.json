{
    "title": "IME settings",
    "rules": [
        {
            "description": "left_command + i to left_control + i",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "i",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "input_mode_id": "com.apple.inputmethod.Japanese",
                                    "input_source_id": "com.google.inputmethod.Japanese.base",
                                    "language": "ja"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_command + t to left_control + t",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "t",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "t",
                            "modifiers": [
                                "control"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "input_mode_id": "com.apple.inputmethod.Japanese",
                                    "input_source_id": "com.google.inputmethod.Japanese.base",
                                    "language": "ja"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}